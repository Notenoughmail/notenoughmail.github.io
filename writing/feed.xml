---
layout: none
permalink: /writing/feed.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="/hidden/rss_style.xsl"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>NotEnoughMail's Writings</title>
        <description>Various bits of creative writing and other ramblings</description>
        <link>{{ site.url }}</link>
        <atom:link href="{{ site.url }}/writing/feed.xml" rel="self" type="application/rss+xml" />
        {% assign posts = site.pages | where: "writing", "true" | sort: "date" | reverse %}
        {% for post in posts limit:10 %}
        <item>
            <title>{{ post.title | xml_escape }}</title>
            {% capture desc %}
                {% if post.cat contains "prompt" %}
                <style>
                p.prompt {
                    background-color: rgba(247, 126, 241, 0.2);
                    padding-top: 0.8rem;
                    padding-right: 0.8rem;
                    padding-left: 0.8rem;
                    padding-bottom: 0.8rem;
                }
                </style>
                {% endif %}
                {% unless post.tags == empty %}
                <details class="tags">
                    <summary>Tags</summary>
                    <span style="font-style:small;"><ul>
                        {% for tag in post.tags %}{% assign t = site.post-tags[tag] %}
                        <li><a href="{{ site.url }}{{ t.link }}">{{ t.title }}</a></li>
                        {% endfor %}
                    </ul></span>
                </details>
                {% endunless %}
                {{ post.content | xml_escape }}
            {% endcapture %}
            <description>{{ desc | xml_escape }}</description>
            <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
            <simpleDate>{{ post.date | date: "%d %b %Y" }}</simpleDate>
            <link>{{ site.url }}{{ post.url }}?utm_source=rss</link>
            <guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
            <author>{{ post.author | default: site.author }}</author>
            {% for tag in post.tags %}
            <category>{{ site.post-tags[tag].title }}</category>
            {% endfor %}
        </item>
        {% endfor %}
        <bottom>Looking for more of my writing? Everything posted here is available (and categorized!) on the Writing page!</bottom>
    </channel>
</rss>