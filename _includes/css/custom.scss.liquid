h6.m-link {
    font-size:inherit !important;
    display: inline;
}

h6.m-link .anchor-heading {
    left: -1.25rem;
}

h6.callout {
    font-size:inherit !important;
    line-height:inherit !important;
}

:is(h1, h2, h3, h4, h5, h6):not(.callout):target {
    background-color:#{{ site.colors.target-highlight }};
    padding: 0.25rem;
    border-radius: 0.25rem;
    a:not(.anchor-heading) {
        color:#{{ site.colors.light-link }};
    }
}

.main-content li:has(li) {
    background: linear-gradient(#27262b, #27262b) padding-box, linear-gradient(90deg, #7d7c7e, transparent, transparent) border-box;
    margin-left: calc(-0.25rem - 1px);
    padding-left: 0.25rem;
    border: 1px solid transparent;
}

li:has(> :target) {
    background-color:#{{ site.colors.target-highlight }} !important;
    padding: 0.25rem !important;
    border: 1px solid #c657f4 !important;
    margin-left: calc(-0.25rem - 1px) !important;
    background-image: linear-gradient(#{{ site.colors.target-highlight }}) !important;
    a:not(.anchor-heading) {
        color:#{{ site.colors.light-link }};
    }
    h6:target {
        padding-left: 0 !important;
    }
    li:has(li) {
        background: linear-gradient(#{{ site.colors.target-highlight }}, #{{ site.colors.target-highlight }}) padding-box, linear-gradient(90deg, #c657f4, transparent) border-box;
    }
}

a:not(.preserve-color) > code {
    color:#{{ site.colors.light-link }};
}

figure {
    display: block;
    margin: auto;
    width: 85%;
    border: 1px solid #7d7c7e;
    padding: 0.25rem;
    border-radius: 0.25rem;
    text-align: center;
}

.main-content li {
    border-radius: 0.25rem;
}

details {
    transition: height 0.5s;
}

details:not(.tags):not(.plain) {
    background: linear-gradient(#27262b, #27262b) padding-box, linear-gradient(90deg, #7d7c7e, transparent) border-box;
    border: 1px solid transparent;
    margin-bottom: 0.25rem;
    summary::marker {
        content: "+ ";
        font-family: monospaced;
        font-weight: bold;
        color: green;
    }
    summary::after {
        content: attr(text-closed);
    }
}

details:not(.tags):not(.plain)[open] {
    summary::marker {
        content: "âˆ’ ";
        color: red;
    }
    summary::after {
        content: attr(text-open);
    }
}

summary {
    padding-left: 0.25rem;
    margin-bottom: 0.25rem;
}

div.footnotes li:target {
    background-color:#{{ site.colors.target-highlight }} !important;
    padding: 0 0.25rem !important;
}

img.inline {
    height: 1rem;
}

a.preserve-color {
    color: $body-text-color;
    text-decoration-color: $link-color !important;
    text-decoration: underline;
    text-underline-offset: 0.15rem;
}

a.preserve-color:hover {
    text-decoration-color: $border-color !important;
}

.main-content h4 {
    text-transform: none!important;
    font-weight: 500!important;
    font-size: 1rem!important;
    letter-spacing: inherit!important;
}

li p:only-child {
    margin: 0.25em 0;
}

p:has(#back-to-top), p:has(#edit-this-page) {
    margin-bottom: 0;
    margin-top: 0;
}

hr:has(+ footer) {
    margin-bottom: 0.25rem;
}