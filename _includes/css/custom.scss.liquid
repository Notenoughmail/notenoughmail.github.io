.highlight {
    .nf {
        color:#{{ site.colors.method }};
    }
    .na {
        color:#{{ site.colors.object-key }};
    }
    .k {
        color:#{{ site.colors.reserved }};
    }
    .o {
        color:#{{ site.colors.symbol }};
    }
    .nb {
        color:#{{ site.colors.func }};
    }
    .mi {
        color:#{{ site.colors.number }};
    }
    .enum {
        color:#{{ site.colors.enum }};
    }
    .e {
        color:#{{ site.colors.enum }};
    }
    .nd {
        color:#{{ site.colors.annotation }};
    }
    .kc {
        color:#{{ site.colors.primitive }};
    }
    .s1 {
        color:#{{ site.colors.string }};
    }
    .kv {
        color:#{{ site.colors.params }};
    }
}

code {
    .nf {
        color:#{{ site.colors.method }};
    }
    .k {
        color:#{{ site.colors.reserved }};
    }
    .o {
        color:#{{ site.colors.symbol }};
    }
    .nb {
        color:#{{ site.colors.func }};
    }
    .mi {
        color:#{{ site.colors.number }};
    }
    .enum, .e {
        color:#{{ site.colors.enum }};
    }
    .nd {
        color:#{{ site.colors.annotation }};
    }
    .kc {
        color:#{{ site.colors.primitive }};
    }
    .s1, .s2 {
        color:#{{ site.colors.string }};
    }
    .kv {
        color:#{{ site.colors.params }};
    }
}

code.e {
    color:#{{ site.colors.enum }};
}
code.f {
    color:#{{ site.colors.func }};
}
code.p {
    color:#{{ site.colors.primitive }};
}
code.m {
    color:#{{ site.colors.method }};
}
code.s {
    color:#{{ site.colors.string }};
}
code.n {
    color:#{{ site.colors.number }};
}
code.v {
    color:#{{ site.colors.params }};
}

h6.m-link {
    font-size:inherit !important;
    display: inline;
}

h6.m-link .anchor-heading {
    left: -1.25rem;
}

h6.callout {
    font-size:inherit !important;
    line-height:inherit !important;
}

:is(h1, h2, h3, h4, h5, h6):not(.callout):target {
    background-color:#{{ site.colors.target-highlight }};
    padding: 0.25rem;
    border-radius: 0.25rem;
    a:not(.anchor-heading) {
        color:#{{ site.colors.light-link }};
    }
}

li:has(> :target) {
    background-color:#{{ site.colors.target-highlight }};
    padding: 0.25rem;
    border-radius: 0.25rem;
    border: 1px solid #c657f4;
    a:not(.anchor-heading) {
        color:#{{ site.colors.light-link }};
    }
    h6:target {
        padding-left: 0;
    }
}

a > code {
    color:#{{ site.colors.light-link }};
}

img.center-image {
    display: block;
    margin: auto;
    width: 80%;
}
