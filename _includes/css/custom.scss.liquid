        color:#{{ site.colors.object-key }};
    }
    .k {
        color:#{{ site.colors.reserved }};
    }
    .o {
        color:#{{ site.colors.symbol }};
    }
    .nb {
        color:#{{ site.colors.builtin }};
    }
    .mi {
        color:#{{ site.colors.number }};
    }
    .enum, .e {
        color:#{{ site.colors.enum }};
    }
    .nd {
        color:#{{ site.colors.annotation }};
    }
    .kc {
        color:#{{ site.colors.primitive }};
    }
    .s1, .s2 {
        color:#{{ site.colors.string }};
    }
    .kv {
        color:#{{ site.colors.params }};
    }
